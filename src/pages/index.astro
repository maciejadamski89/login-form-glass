---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Login Form">
	<main class="">
        <section class="flex items-center justify-center min-h-screen bg-center bg-cover bg-forest">
            <div class="w-full max-w-lg px-6 mx-4 text-center text-white border md:px-16 bg-white/10 backdrop-blur-sm border-white/30 rounded-xl">
                <form>
                    <div class="grid grid-cols-1 my-10 gap-x-6 gap-y-8">
                        <div class="col-span-full">
                            <h2 class="text-4xl font-bold">Login</h2>
                        </div>
                        <div class="col-span-full">
                            <input type="email" class="w-full px-4 py-2 text-white bg-transparent border rounded-full outline-none border-white/20 focus:ring-2 ring-white" placeholder="E-mail"/>
                        </div>
                        <div class="col-span-full">
                            <input type="password" class="w-full px-4 py-2 bg-transparent border rounded-full outline-none border-white/20 focus:ring-2 ring-white" placeholder="Password"/>
                        </div>
                        <div class="col-span-full">
                            <div class="flex flex-col items-center justify-around gap-4 sm:flex-row">
                                <div>
                                    <label><input type="checkbox" class="mx-2"/>Remember me</label>
                                </div>
                                <div>
                                    <a href="#" class="font-semibold hover:underline">Forgot Password</a>
                                </div>
                            </div>
                        </div>
                        <div class="col-span-full">
                            <button class="w-full py-2 font-semibold bg-white rounded-full text-black/80 hover:bg-white/90">Submit</button>
                        </div>
                        <div class="col-span-full">
                            <p class="font-extralight">Dont have an account?<a href="#" class="ml-2 font-bold hover:underline">Register</a></p>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>
</Layout>